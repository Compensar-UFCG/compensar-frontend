{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "@testing-library/jest-dom",
      "@types/node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/app/components/*"
      ],
      "@interfaces/*": [
        "./src/app/interfaces/*"
      ],
      "@contexts/*": [
        "./src/app/contexts/*"
      ],
      "@hooks/*": [
        "./src/app/hooks/*"
      ],
      "@styles/*": [
        "./src/app/styles/*"
      ],
      "@api/*": [
        "./src/pages/api/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
